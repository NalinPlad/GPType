  font-size: 1rem;
  width: 50%;
  text-align: center;
  color: #888;
  margin-bottom: 1rem;
}

/* The Close Button */
.close {
  margin-top: 1rem;
  color: #aaa;
  float: right;
  font-size: 18px;
  /* font-weight: bold; */
  font-weight: 400;
  background-color: #ebebeb;
  width: 5rem;
  text-align: center;

  border-radius: 5px;
  transition: all 0.2s;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}
</style>

